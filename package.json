{
  "name": "price-history-tracker",
  "version": "1.0.0",
  "description": "Chrome extension to track price history on Amazon, eBay, and AliExpress",
  "type": "module",
  "scripts": {
    "build": "node esbuild.config.js production",
    "dev": "node esbuild.config.js development",
    "watch": "node esbuild.config.js watch",
    "lint": "eslint src --ext .ts --fix",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "chrome-extension",
    "price-tracker",
    "amazon",
    "ebay",
    "aliexpress"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/ui": "^4.0.8",
    "dotenv": "^17.2.3",
    "esbuild": "^0.26.0",
    "eslint": "^8.57.0",
    "jsdom": "^27.1.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.8"
  },
  "dependencies": {
    "chart.js": "^4.5.1",
    "firebase": "^12.5.0",
    "linkedom": "^0.18.12"
  }
}
