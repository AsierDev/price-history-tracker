{
  "manifest_version": 3,
  "default_locale": "en",
  "name": "__MSG_extensionName__",
  "version": "1.0.2",
  "description": "__MSG_extensionDescription__",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.amazon.com/*",
    "https://*.amazon.es/*",
    "https://*.amazon.co.uk/*",
    "https://*.ebay.com/*",
    "https://*.ebay.es/*",
    "https://*.aliexpress.com/*",
    "https://*.aliexpress.es/*",
    "https://*.pccomponentes.com/*",
    "https://*.elcorteingles.es/*",
    "https://*.mediamarkt.es/*",
    "https://*.etsy.com/*",
    "https://*.shopify.com/*",
    "https://*.walmart.com/*",
    "https://*.target.com/*",
    "https://*.bestbuy.com/*",
    "https://*.carrefour.es/*",
    "https://*.mercadolibre.com/*",
    "https://*.zalando.es/*",
    "https://*.fnac.es/*",
    "https://*.lidl.es/*",
    "https://*.mercadona.es/*",
    "https://*.decathlon.es/*"
  ],
  "optional_host_permissions": [
    "https://*/*"
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.amazon.com/*",
        "https://*.amazon.es/*",
        "https://*.amazon.co.uk/*",
        "https://*.ebay.com/*",
        "https://*.ebay.es/*",
        "https://*.aliexpress.com/*",
        "https://*.aliexpress.es/*",
        "https://*.pccomponentes.com/*",
        "https://*.elcorteingles.es/*",
        "https://*.mediamarkt.es/*",
        "https://*.etsy.com/*",
        "https://*.shopify.com/*",
        "https://*.walmart.com/*",
        "https://*.target.com/*",
        "https://*.bestbuy.com/*",
        "https://*.carrefour.es/*",
        "https://*.mercadolibre.com/*",
        "https://*.zalando.es/*",
        "https://*.fnac.es/*",
        "https://*.lidl.es/*",
        "https://*.mercadona.es/*",
        "https://*.decathlon.es/*"
      ],
      "js": [
        "content-script.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "popup/icons/icon-16.png",
      "32": "popup/icons/icon-32.png",
      "48": "popup/icons/icon-48.png",
      "128": "popup/icons/icon-128.png"
    },
    "default_title": "Price History Tracker"
  },
  "homepage_url": "https://github.com/AsierDev/price-history-tracker",
  "privacy_policy": "https://asierdev.github.io/price-history-tracker/privacy.html"
}
