{
  "manifest_version": 3,
  "name": "Price History Tracker",
  "version": "1.0.0",
  "description": "Track price history on Amazon, eBay, and AliExpress. Get notified when prices drop.",

  "icons": {
    "16": "popup/icons/icon16.png",
    "32": "popup/icons/icon32.png",
    "48": "popup/icons/icon48.png",
    "128": "popup/icons/icon128.png"
  },

  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "tabs"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "popup/icons/icon16.png",
      "32": "popup/icons/icon32.png",
      "48": "popup/icons/icon48.png",
      "128": "popup/icons/icon128.png"
    },
    "default_title": "Price History Tracker"
  }
}
